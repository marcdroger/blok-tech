extends layout/template.pug

block content
  header
    h1 Account
  main
    form.account(action='/account' method='post' enctype='multipart/form-data')
      img(src='./images/avatar.jpg' alt='avatar name')
      input(type='file' name='avatar' accept='image/*')
      //- TODO: make avatar different form?
      h2 General Info
      hr
      label(for='firstname') First Name
      input(type='text' name='firstname' id='firstname' required)
      label(for='lastname') Last name
      input(type='text' placeholder='' name='lastname' id='lastname' required)
      h2 Education
      hr
      label(for='education') Current study
      input(type='text' placeholder='' name='education' id='education' required)
      label(for='school') Current School
      select(name='school' id='school')
        option(value='ha') Harvard University
        option(value='hr') Hogeschool van Rotterdam
        option(value='hva') Hogeschool van Amsterdam
        option(value='ku') Kyoto University
        option(value='uot') University of Toronto
      label(for='country') Country preference
      select(name='country' id='country')
        option(value='ca') Canada
        option(value='eng') England
        option(value='jp') Japan
        option(value='nl') Netherlands
        option(value='usa') United States
      h2 Contact
      hr
      label(for='linkedin') LinkedIn account (url)
      input(type='url' placeholder='' name='linkedin' id='linkedin' pattern="https://.*")
      label(for='instagram') Instagram account (url)
      input(type='url' placeholder='' name='instagram' id='instagram' pattern="https://.*")

      input(type='submit' value='Update profile')
