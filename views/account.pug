extends layout/template.pug

block content
  header
    h1 Account
  main
    form.account(action='/account' method='post')
      h2 General Info
      hr
      label(for='firstname') First Name
      input(type='text' name='firstname' id='firstname' required)
      label(for='lastname') Last name
      input(type='text' placeholder='' name='lastname' id='lastname' required)
      label(for='email') E-mailadres (used for contact)
      input(type="email" placeholder='' name='email' id='email')
      h2 Education
      hr
      label(for='education') Current study
      input(type='text' placeholder='' name='education' id='education' required)
      label(for='school') Current School
      select(name='school' id='school')
        option(value='Harvard University') Harvard University
        option(value='Erasmus Universiteit Rotterdam') Erasmus Universiteit Rotterdam
        option(value='University of Amsterdam') University of Amsterdam
        option(value='Kyoto University') Kyoto University
        option(value='Ryerson University') Ryerson University
      label(for='country') Country preference
      select(name='country' id='country')
        option(value='Canada') Canada
        option(value='England') England
        option(value='Japan') Japan
        option(value='Netherlands') Netherlands
        option(value='United States') United States

      input(type='submit' value='Update profile')
