extends layout/template.pug

block content
  header
    h1 Account
  main
    form.account(action='')
      img(src='./images/avatar.jpg' alt='avatar name')
      input(type='file' name='image' id='image' accept='image/*')
      label(for='firstname') First Name
      input(type='text' name='firstname' id='firstname')
      label(for='lastname') Last name
      input(type='text' placeholder='' name='lastname' id='lastname')
      label(for='education') Currently studying
      input(type='text' placeholder='' name='education' id='education')
      label(for='school') Current School
      input(type='text' placeholder='' name='school' id='school') 
      label(for='country') Country preference
      select(id='country')
        option(name='' value='') country

      input(type='submit' value='update account')
